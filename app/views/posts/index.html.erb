<h1> Hi, welcome to the posts page</h1>
<%= link_to "create new post", new_post_path %>
<% @posts.each do |p| %>
	<h3>
		<%= p.title %>
	</h3>
	<br/>
	<%= p.body %>
	<%= link_to "show", post_path(p) %>
	<%= link_to "edit", edit_post_path(p) %>
	<%= link_to "destroy", post_path(p), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
<% end %>